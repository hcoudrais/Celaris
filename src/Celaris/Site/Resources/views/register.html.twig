{% extends '::base.html.twig' %}

{% block content %}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="offset3 col-xs-3">
            <div id="register-form-content" class="pull-left">
                <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                    <div class="row-fluid">
                        <div class="col-xs-12 text-danger">{{ form_errors(form.email) }}</div>
                        <div class="col-xs-6"><strong>Adresse E-mail :</strong></div>
                        <div class="col-xs-6">{{ form_widget(form.email) }}</div>

                        <div class="col-xs-12 text-danger">{{ form_errors(form.username) }}</div>
                        <div class="col-xs-6"><strong>Nom d'utilisateur :</strong></div>
                        <div class="col-xs-6">{{ form_widget(form.username) }}</div>

                        <div class="col-xs-12 text-danger">{{ form_errors(form.plainPassword) }}</div>
                        <div class="col-xs-12">{{ form_widget(form.plainPassword) }}</div>

                        {{ form_widget(form._token) }}

                        <input type="submit" value="{{ 'registration.submit'|trans|desc('Submit') }}" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock content %}

{% block javascripts %}
    {{ parent() }}
    <script>

    </script>
{% endblock %}
